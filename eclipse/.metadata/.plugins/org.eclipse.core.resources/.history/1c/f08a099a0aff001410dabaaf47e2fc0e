package de.tisan.forge.firstmod.blocks;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.world.World;
import de.tisan.forge.firstmod.FirstMod;
import de.tisan.forge.helpers.Bukkit;

public class BlockTiBlock extends Block {

	protected BlockTiBlock() {
		super(Material.rock);
		setBlockName("DeineMudda");
		setHardness(1F);
		setBlockTextureName("FirstMod:TiBlock");
		setCreativeTab(FirstMod.instance.getBlockTab());
	}

	@Override
	public boolean onBlockActivated(World world, int x, int y, int z, EntityPlayer player, int data, float f1, float f2, float f3) {
		if (FirstMod.instance.isServer()) {
			for (EntityPlayer pl : Bukkit.getPlayers()) {
				Bukkit.broadcastMessage("Online user: " + pl.getCommandSenderName());
			}
		}

		return true;
	}
}
