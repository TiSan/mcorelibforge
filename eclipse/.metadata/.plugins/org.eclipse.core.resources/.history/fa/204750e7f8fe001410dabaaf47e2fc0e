package de.tisan.forge.firstmod.items;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraft.world.World;
import de.tisan.forge.firstmod.FirstMod;
import de.tisan.forge.helpers.Bukkit;

public class ItemHoden extends Item {
	public ItemHoden() {

	setUnlocalizedName("Hoden");
	setTextureName("FirstMod:TiBlock");
	setCreativeTab(FirstMod.instance.getBlockTab());
	}
	@Override
	public ItemStack onItemRightClick(ItemStack item, World world, EntityPlayer player) {
		Bukkit.broadcastMessage("");
		return item;
	}
}
