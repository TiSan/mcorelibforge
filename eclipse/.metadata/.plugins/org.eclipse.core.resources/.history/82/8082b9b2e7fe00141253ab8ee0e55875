package de.tisan.forge.helpers;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.server.MinecraftServer;
import net.minecraft.util.ChatComponentText;
import net.minecraft.util.EnumChatFormatting;
import de.tisan.forge.firstmod.FirstMod;

public class Bukkit {
	public static void sendMessage(EntityPlayer player, String message) {

		player.addChatComponentMessage(new ChatComponentText(message));
	}

	public static void sendMessage2(EntityPlayer player, String message) {
		player.addChatComponentMessage(new ChatComponentText(EnumChatFormatting.AQUA + message));
	}

	public static void broadcastMessage(String message) {
		if (FirstMod.instance.isServer()) {
			String[] names = MinecraftServer.getServer().getConfigurationManager().getAllUsernames();
		} else {
			Bukkit.sendMessage(null, message);
		}

	}

	public EntityPlayer getPlayer(String name) {
